{% macro row(title) %}
    {% if title %}
        <tr>
            <td style="padding: 12px 16px; font-size: 20px; text-align: center; background-color: #feb600;">
                <b>{{ title }}</b>
            </td>
        </tr>
    {% endif %}
{% endmacro %}

{% macro emptyRow(title) %}
    {% if title %}
        <tr>
            <td style="padding: 12px 16px; font-size: 20px; text-align: center;">
                <b>{{ title }}</b>
            </td>
        </tr>
    {% endif %}
{% endmacro %}