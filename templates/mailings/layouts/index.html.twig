                    </a>
                </td>
            </tr>
            {% block content %}{% endblock %}
            {{ messages.automatic() }}
            <tr>
                <td style="padding: 12px 16px 16px; line-height: 1.4; font-size: 14px; text-align: center; background-color: #feb600;">
