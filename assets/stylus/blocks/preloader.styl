.preloader
    position: fixed
    top: 0
    left: 0
    width: 100%
    height: 100vh
    background-color: $white
    opacity: 0
    z-index: -100
    transition: opacity $t-default, z-index $t-default

    &.is-active
        opacity: 1
        z-index: 100

    &__indicator
        loader-2($dark-emerald, $emerald, $light-emerald)