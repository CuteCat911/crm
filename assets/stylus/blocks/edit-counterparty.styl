.edit-counterparty

    &__row
        margin-bottom: remSize(32px)
        padding-bottom: remSize(24px)
        display: flex
        flex-wrap: wrap
        border-bottom: remSize(2px) solid $light-gray

        &:last-child
            margin-bottom: 0
            border-bottom: 0

    &__title
        margin-bottom: remSize(24px)
        width: 100%
        font-size: remSize(20px)
        font-weight: 500
        color: $dark-emerald
        letter-spacing: remSize(0.4px)

    &__col
        colWidth(1, 2, 16px)

        &--left
            margin-right: remSize(16px)

        &--right
            margin-left: remSize(16px)

        & .form-input

            &:last-child
                margin-bottom: 0

            &--description

                & .form-input__input
                    height: remSize(386px)