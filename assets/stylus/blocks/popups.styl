.popups
    fullSize()
    position: fixed
    opacity: 0
    z-index: -100
    transition: opacity $t-popup, z-index $t-popup
    overflow: hidden
    overflow-y: auto

    &.is-open
        opacity: 1
        z-index: 100

    &__overlay
        fullSize()
        position: fixed
        background-color: alpha($black, 0.8)
        z-index: 0
        cursor: pointer