// Дефолтные стили для проекта

*
    margin: 0
    padding: 0

html
    min-width: 320px
    height: 100%
    font-family: $default-font
    color: $text
    //fz-responsive($fz-min, $fz-mid, $fz-max, $fz-min-point, $fz-mid-point, $fz-max-point, true)
    background-color: $light-gray

body
    height: 100%

    &.is-lock
        overflow: hidden

footer
    flex: 0 0 auto

.page-wrapper
    position: relative
    display: flex
    flex-direction: column
    height: 100%

.page-content
    flex: 1 0 auto

.content-wrapper
    height: 0